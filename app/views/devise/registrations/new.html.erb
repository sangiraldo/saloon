<div class="container">
  <div class="row">
    <div class="center">
      <h3> <%= t('sign_up') %> </h3>
      <%= link_to t('register_with_facebook'), user_facebook_omniauth_authorize_url, class: "btn blue darken-4 facebook" %>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col s12", id: "formValidateRegistration", multipart: true }) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :full_name, id: "full_name", name: "user[full_name]", class: "validate", data: {error: '.validate_full_name'} %>
          <%= f.label :full_name, for: "full_name" %>
          <div class="validate_full_name"></div>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :email, id: "email", name: "user[email]", class: "validate", data: {error: '.validate_email'} %>
          <%= f.label :email, for: "email", class: "active" %>
          <div class="validate_email"></div>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <%= f.password_field :password, id: "password", name: "user[password]", class: "validate", data: {error: '.validate_password'} %>
          <%= f.label :password, for: "password", class: "active" %>
          <div class="validate_password"></div>
        </div>

        <div class="input-field col s6">
          <%= f.password_field :password_confirmation, id: "password_confirmation", name: "user[password_confirmation]", class: "validate", data: {error: '.validate_password_confirmation'} %>
          <%= f.label :password_confirmation, for: "password_confirmation" %>
          <div class="validate_password_confirmation"></div>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :cellphone, id: "cellphone", name: "user[cellphone]", class: "validate", data: {error: '.validate_cellphone'} %>
          <%= f.label :cellphone, for: "ascellphone" %>
          <div class="validate_cellphone"></div>
        </div>
        <div class="input-field col s6">
          <%= f.radio_button :gender, 'male', checked: true %>
          <%= f.label :gender, "Hombre", value: "male"  %>
          <%= f.radio_button :gender, 'female' %>
          <%= f.label :gender, "Mujer", value: "female" %>
          <%= f.radio_button :gender, 'other' %>
          <%= f.label :gender, "Otro", value: "other" %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :address, id: "address", name: "user[address]", class: "validate", data: {error: '.validate_address'} %>
          <%= f.label t('address'), for: "address" %>
          <div class="validate_address"></div>
        </div>
      </div>

      <div class="container center">
        <%= f.submit t('register'), class: "btn waves-effect waves-light light-blue darken-3" %>
      </div>
    <% end %>
  </div>
</div>
